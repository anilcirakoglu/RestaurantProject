@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana sayfa İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Yazı girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone">

							</div>
							<div class="card-body">
								<div class="form-group">
									<label for="Description">Mail adresi giriniz</label>
									<input type="Mail" class="form-control" asp-for="Mail" id="Mail">

								</div>

							</div>
							<div class="card-body">
								<div class="form-group">
									<label for="FooterDescription">Açıklama giriniz</label>
									<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>

								</div>

							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Yazısını ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>



