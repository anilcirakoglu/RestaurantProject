@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni hakkımızda Yazı Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="AboutID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlığı gir</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">

							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Görsel url gir</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">

							</div>
							<div class="card-body">
								<div class="form-group">
									<label for="Description">Açıklama gir</label>
									<textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>

								</div>

							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




